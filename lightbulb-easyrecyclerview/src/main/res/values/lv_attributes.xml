<?xml version="1.0" encoding="utf-8"?>
<resources>
    <integer name="view_list_transition_duration">250</integer>
    <declare-styleable name="EasyRecyclerViewTheme">
        <attr name="easyRecyclerViewStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="EasyRecyclerView">
        <attr name="erv_empty_layout_id" format="reference" />
        <attr name="erv_supports_pull_to_refresh" format="boolean" />
        <attr name="erv_supports_load_more" format="boolean" />
        <attr name="erv_supports_overscroll_bounce" format="boolean" />
        <attr name="erv_layout_manager" format="enum">
            <enum name="LAYOUT_LINEAR_VERTICAL" value="1" />
            <enum name="LAYOUT_LINEAR_HORIZONTAL" value="2" />
            <enum name="LAYOUT_FLOW_VERTICAL" value="3" />
            <enum name="LAYOUT_FLOW_HORIZONTAL" value="4" />
        </attr>
    </declare-styleable>
</resources>