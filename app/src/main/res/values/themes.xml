<resources>
    <!-- Base application theme. -->
    <style name="SliderStyle" parent="@style/Widget.MaterialDrawerStyle">
        <item name="materialDrawerBackground">?colorBackground</item>
    </style>

    <style name="SplashThemeLight" parent="Theme.Components.Light">
        <item name="android:background">@drawable/bg_splash</item>
    </style>

    <style name="DemoTheme" parent="Theme.Components.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@null</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
        <item name="colorDelimiter">@color/light_list_delimiter</item>
        <item name="materialDrawerStyle">@style/SliderStyle</item>
        <item name="easyRecyclerViewStyle">@style/EasyRecyclerViewDefaultStyle</item>
    </style>

</resources>